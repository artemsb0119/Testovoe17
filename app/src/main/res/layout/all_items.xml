<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    android:padding="8dp"
    android:background="?attr/colorOnPrimary">

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        tools:background="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="?attr/colorSecondaryVariant"
        app:layout_constraintStart_toEndOf="@id/imageViewAvatar"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitcoin"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@id/textViewName"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewId"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:text="1"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:textColor="?attr/colorSecondaryVariant"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/id_cons"
        app:layout_constraintStart_toEndOf="@id/imageViewAvatar"
        app:layout_constraintTop_toBottomOf="@id/textViewName"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textViewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$589.37B"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@id/textViewId"
        app:layout_constraintTop_toTopOf="@id/textViewId"
        app:layout_constraintBottom_toBottomOf="@id/textViewId"/>

    <TextView
        android:id="@+id/textViewCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$30,322K"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="?attr/colorSecondaryVariant"
        app:layout_constraintTop_toTopOf="@id/textViewName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textViewName"/>

    <TextView
        android:id="@+id/textViewProc"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:text="-0.13%"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/red_cons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewId"
        app:layout_constraintBottom_toBottomOf="@id/textViewId"/>

</androidx.constraintlayout.widget.ConstraintLayout>